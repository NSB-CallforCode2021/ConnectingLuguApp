<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/land_profile"
        android:singleLine="false"
        android:maxLines="20"
        android:text=""
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/land_result"
        android:singleLine="true"
        android:text="Result:|Health Idx:"
        android:padding="1dp"
        android:textColor="@color/xui_config_color_light_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <ProgressBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/upload_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        android:indeterminateOnly="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />
    <ImageView
        android:id="@+id/land_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/config_padding_5dp"
        android:src="@drawable/blank"
        android:layout_weight="1.0" />
    <LinearLayout
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xui_transparent"
        android:orientation="horizontal">
        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            style="@style/RoundButton.Auto"
            android:id="@+id/btn_farmland_scan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/config_padding_5dp"
            android:layout_marginLeft="@dimen/config_margin_24dp"
            android:layout_marginRight="@dimen/config_margin_24dp"
            android:text="Photo"
            android:textColor="@color/xui_default_round_btn_white_text"
            app:rb_backgroundColor="@color/xui_btn_blue_normal_color"
            app:rb_borderColor="@color/xui_btn_blue_normal_color" />
        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            style="@style/RoundButton.Auto"
            android:id="@+id/btn_farmland_analysis"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/config_padding_5dp"
            android:layout_marginLeft="@dimen/config_margin_24dp"
            android:layout_marginRight="@dimen/config_margin_24dp"
            android:text="Analysis"
            android:textColor="@color/xui_default_round_btn_white_text"
            app:rb_backgroundColor="@color/xui_btn_blue_normal_color"
            app:rb_borderColor="@color/xui_btn_blue_normal_color" />
    </LinearLayout>
</LinearLayout>